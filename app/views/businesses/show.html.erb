<!DOCTYPE html>
<html lang="en">
<script src="//maps.google.com/maps/api/js?key=AIzaSyDjIvow_oNXKMo1tkWEzEeqPA2ZdSdOcH0"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>

<br>
<div class="jumbotron">
  <div class="container text-center">
    <h1><%= @business.name %></h1>      
    <p><%= @business.description %></p>
    <p><%= @business.address %></p>
    <p> <%= image_tag(@business.logo_url, width: 150) if @business.logo_url.present? %> </p>
  </div>
  <div style='width: 400px;margin: 0 auto 0 auto;'>
    <div id="one_marker" style='width: 400px; height: 200px;'></div>
  </div>
</div>

<br>


<div class="container">    
  <div class="row">
 <h2 class="centered"> Coupons </h2>
<div class="list-group scroll-box">


	<% @coupons.each do |coupon| %>

	  <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
      <table class="table">
        <tbody>
          <tr>
            <td> <%= image_tag(coupon.image_url, width: 150) if coupon.image_url.present? %> </td>
            <td>
      	    <div class="d-flex w-100 justify-content-between">
              <h2 class="mb-1"><%= coupon.title %></h2>
      	      <p class="mb-1"><%= coupon.description %></p>
      	    </div>
          </td>
          <td>
            <div class="d-flex w-100 justify-content-between">
      	     
      	     <small>Expires: <%= coupon.end_time %></small>
          </div>
          </td>
        </tr>
      </tbody>
    </table>
	  </a>
  	<% end %>
</div>
  </div>
</div><br><br>

<div class="container">    
  <div class="row">
<h2 class="centered"> Events </h2>
<div class="list-group scroll-box">
	<% @events.each do |event| %>
  <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
      <table class="table">
        <tbody>
          <tr>
            <td> <%= image_tag(event.image_url, width: 150) if event.image_url.present? %> </td>
            <td>
            <div class="d-flex w-100 justify-content-between">
              <h2 class="mb-1"><%= event.title %></h2>
              <p class="mb-1"><%= event.description %></p>
            </div>
          </td>
          <td>
            <div class="d-flex w-100 justify-content-between">
             
             <small>Expires: <%= event.end_time %></small>
          </div>
          </td>
        </tr>
      </tbody>
    </table>
  </a>
  <% end %>
</div>
  </div>
</div><br><br>





<footer class="container-fluid text-center">
  <%= image_tag("cmf.png", width: 150) %> 
</footer>

</body>
<script>
	handler = Gmaps.build('Google');
	handler.buildMap({ internal: {id: 'one_marker'}}, function(){
  		var marker = handler.addMarker({
    		lat: <%= @business.latitude %>,
    		lng: <%= @business.longitude %>
  		});
  		handler.map.centerOn(marker);
      handler.map.setZoom(12);
	});
</script>


