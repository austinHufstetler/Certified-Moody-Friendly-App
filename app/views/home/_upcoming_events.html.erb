<h2>Upcoming Events</h2>
<ul class="catalog">
	<% @upcoming_events.each do |event| %>
		<li>
			<%= link_to image_tag(event.image_url), event %>
			<h2><%= event.title %></h2>
			<p>
				<%= sanitize(event.description) %>
				<br>
				Starts: <%= event.start_time %>
				<br>
				Ends:   <%= event.end_time %>
			</p>
		</li>
	<% end %>
</ul>