<h2>Hottest Coupons</h2>
<ul class="catalog">
	<% @coupons.each do |coupon| %>
		<li>
			<%= link_to image_tag(coupon.image_url), coupon %>
			<h2><%= coupon.title %></h2>
			<p>
				<%= sanitize(coupon.description) %>
				<br>
				Starts: <%= coupon.start_time %>
				<br>
				Ends:   <%= coupon.end_time %>
			</p>
		</li>
	<% end %>
</ul>