
<h2>Edit chamber's Profile</h2>

<%= simple_form_for(@chamber, as: @chamber, url: chamber_path(@chamber), html: { method: :patch }) do |f| %>
	<%= f.error_notification %>
	<div class="form-inputs">
		<%= f.input :address, required: true %>
	</div>
	<div class="form-actions">
		<%= f.button :submit, "Update" %>
	</div>
<% end %>