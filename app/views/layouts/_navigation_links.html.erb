
<li><%= link_to 'Home', home_index_path %></li>
<li><%= link_to 'Coupons', coupons_path %></li>
<li><%= link_to 'Events', events_path %></li>
<% if account_signed_in? %>  
	<% if current_account.accountable_type == "Military" %>
		<li><%= link_to 'Profile', edit_military_path(current_account.accountable_id) %></li>
	<% elsif current_account.accountable_type == "Business" %>
		<li><%= link_to 'Profile', edit_business_path(current_account.accountable_id) %></li>
	<% else %>
		<li><%= link_to 'Profile', edit_chamber_path(current_account.accountable_id) %></li>
	<% end %>

	<li><%= link_to 'Sign out', destroy_account_session_path, :method=>'delete' %></li>
<% else %>  
	<li><%= link_to 'Sign in', new_account_session_path %></li>  
	<li><%= link_to 'Sign up', new_account_registration_path %></li>
<% end %>